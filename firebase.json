{
  "hosting": {
    "public": "dist", // Or "build", or whatever your project's build output folder is
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [ // <<< THIS IS THE CRUCIAL PART
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
  "functions": {
    "source": "functions",
    "runtime": "nodejs18"
  }
  // ... any other Firebase service configurations ...
}